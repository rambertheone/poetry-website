<script>
		let count = {value:0};
        let abhayCount = {value:0};
        let rambertCount = {value:0};
		let arrayImageSource= ["../../../images/rotation/image1.png","../../../images/rotation/image2.png","../../../images/rotation/image3.png", "../../../images/rotation/image4.png"];
        let abhay = ["../../../images/abhay/image1.webp","../../../images/abhay/image2.webp","../../../images/abhay/image3.webp"];
        let rambert = ["../../../images/rambert/image1.webp","../../../images/rambert/image2.webp","../../../images/rambert/image3.webp"];
		let image = document.getElementById("homeViewImages");
        let abhayImage = document.getElementById("abhay");
        let rambertImage = document.getElementById("rambert");
		
		function cycle() {
                image.src = arrayImageSource[count];
                abhayImage.src = abhay[abhayCount];
                rambertImage.src = rambert[rambertCount]
                count = (count === arrayImageSource.length - 1) ? 0 : count + 1;
                abhayCount = (abhayCount === abhay.length - 1) ? 0 : abhayCount + 1;
                rambertCount = (rambertCount === rambert.length - 1) ? 0 : rambertCount + 1;
            }
        function rotation(array, image, count) {
            image.src = array[count.value]
            count.value = (count.value === array.length - 1) ? 0 : count.value + 1;
        }
            
        setInterval(() => rotation(arrayImageSource, image, count), 4000);
        setInterval(() => rotation(abhay, abhayImage, abhayCount), 4000);
        setInterval(() => rotation(rambert, rambertImage, rambertCount), 4888);
        // setInterval(() => cycle(), 4000);
	</script>

